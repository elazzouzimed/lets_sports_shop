<h1 class = "mt-3"> <strong>OUR SPORTS</strong> </h1>
<div class= "container">
  <div class="row">
    <% @sports.each do |sport| %>
    <div class="col-lg-3 col-md-4 col-sm-12">
      <div class="card mb-4 box-shadow">
        <% image = sport.name + ".jpg" %>
        <%= image_tag  image %>
        <div class="card-body mt-5">
          <h3 class="card-text"><%= sport.name.capitalize %></h3>
          <div class="d-flex justify-content-between align-items-center">
             <div class="btn-group">
                <%= link_to sport_path(sport) , class: "btn btn-sm btn-outline-secondary" do %>
                   Explore
                <% end %>
             </div>
          </div>
        </div>
      </div>
    </div>
   <% end %>
  </div>

</div>
