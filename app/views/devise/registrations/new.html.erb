
<div class="login-body">
   <div class="container-login right-panel-active" id="login">
    <div class="form-container sign-up-container ">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <h2>Créer un compte</h2>
        <span> Entrez vos données personnelles et rejoignez notre communauté </span>
        <div class="hidden-label">
          <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", placeholder: "Enter your email" }%>
          <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", placeholder: "Enter a valid password" } %>
        <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password", placeholder: "Confirm your password" } %>
        <%= f.button :submit, "Sign up" %>
        </div>
      <% end %>

    </div>
    <div class="overlay-container">
      <div class="overlay">
        <div class="overlay-panel overlay-left">
          <h1>Bienvenue!</h1>
          <p>Entrez vos données personnelles et rejoignez notre communauté</p>
          <%- if controller_name != 'sessions' %>
            <%= link_to "Log in", new_session_path(resource_name), class: "ghost" %><br />
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
