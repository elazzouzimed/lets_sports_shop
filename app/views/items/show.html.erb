<div class="item mb-5 mt-5">
  <div class="row">
    <div class="col-sm-7 col-xs-12 mt-3">
       <%= cl_image_tag @item.photo.key, height: 300, width: 400, crop: :fill %>
    </div>
    <div class="col-sm-5 col-xs-12 mt-3">
      <h1> <%= @item.name %> </h1>
      <h3> <%= @item.price %> euro </h3>
      <p> <%= @item.description %> </p>
      <button class = "btn btn-primary">Cantacter le Vendeur</button>
    </div>
  </div>
</div>
